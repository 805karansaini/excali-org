{
  "manifest_version": 3,
  "name": "Excali Organizer",
  "version": "0.0.0",
  "description": "Organize your Excalidraw files and projects.",
  "icons": {
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png"
  },
  "content_scripts": [
    {
      "js": ["assets/content-unified.js"],
      "matches": ["https://excalidraw.com/*"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://excalidraw.com/*"
      ],
      "resources": [
        "assets/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://excalidraw.com/*"
  ]
}
